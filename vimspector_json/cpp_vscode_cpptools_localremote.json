{
  // 用于gdbserver在本机的远程调试, 特别适用与调试linux等操作系统的程序
  "configurations": {
    "Attach": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "type": "cppdbg",
        "request": "launch",
        "program": "",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "miDebuggerServerAddress": "localhost:1234"
      }
    }
  }
}
